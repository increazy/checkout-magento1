<?xml version="1.0"?>
<config>
    <tabs>
        <increazy_config translate="label" module="increazy_config">
            <label>Increazy Checkout</label>
            <sort_order>1</sort_order>
        </increazy_config>
    </tabs>

    <sections>
        <increazy_config translate="label" module="increazy_config">
            <label>Configuração geral</label>
            <tab>increazy_config</tab>
            <frontend_type>text</frontend_type>
            <sort_order>1</sort_order>
            <show_in_default>1</show_in_default>
            <show_in_website>1</show_in_website>
            <show_in_store>1</show_in_store>

            <groups>
                <general>
                    <label>Configurações da Increazy</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>10</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <fields>
                        <hash>
                            <label>Hash</label>
                            <frontend_type>text</frontend_type>
                            <validate>required-entry</validate>
                            <sort_order>1</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <comment>Recupere esse hash no painel Increazy.</comment>
                        </hash>

                        <app>
                            <label>Id da aplicação</label>
                            <frontend_type>text</frontend_type>
                            <validate>required-entry</validate>
                            <sort_order>1</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <comment>AppId gerado no painel da Increazy.</comment>
                        </app>

                        <test>
                            <label>Usar ambiente de homologação (beta)</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>1</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <comment>Marque como "Sim" se você estiver usando nosso ambiente de homologação</comment>
                        </test>

                        <onetap>
                            <label>Habilitar compra com 1 clique</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>1</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <comment>Ao habilitar essa opção iremos importar os scripts para o 1 clique funcionar</comment>
                        </onetap>
                    </fields>
                </general>
            </groups>
        </increazy_config>
    </sections>
</config>